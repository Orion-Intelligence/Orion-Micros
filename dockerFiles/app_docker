FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Install system packages, ADD poppler-utils and tesseract-ocr
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxrandr2 \
    libxdamage1 \
    libxshmfence1 \
    libasound2 \
    libpangocairo-1.0-0 \
    libcairo2 \
    libpango-1.0-0 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libfontconfig1 \
    libxext6 \
    libgtk-3-0 \
    curl \
    wget \
    poppler-utils \
    tesseract-ocr \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m ensurepip && pip install --upgrade pip && pip install playwright && playwright install --with-deps

COPY app/requirements.txt /tmp/requirements.txt
RUN pip install -r /tmp/requirements.txt

COPY app /app
COPY config /app

WORKDIR /app

CMD ["uvicorn", "api.server:app", "--host", "0.0.0.0", "--port", "8010"]
